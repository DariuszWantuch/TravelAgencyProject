
@model TravelAgency.Models.Views.TravelView

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <form asp-controller="Travels" asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row col-5" style="margin:0 auto">
                <label asp-for="DateFrom" class="control-label">Data od</label>
                <input asp-for="DateFrom" class="form-control"/>
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group row col-5" style="margin:1% auto">
                <label asp-for="DateTo" class="control-label">Data do</label>
                <input asp-for="DateTo" class="form-control"/>
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="form-group row col-5" style="margin:1% auto">
                <label asp-for="Place" class="control-label">Miejsce</label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>           
            <div class="form-group row col-5" style="margin:1% auto">
                <label asp-for="PersonNumber" class="control-label">Liczba osób</label>
                <input asp-for="PersonNumber" class="form-control" /> 
                <span asp-validation-for="PersonNumber" class="text-danger"></span>
            </div>         
            <div class="form-group row">
                <div class="form-group row col-5" style="margin:auto">
                    <div class="col">
                        <button type="submit" class="btn btn-danger form-control">Szukaj</button>
                    </div>
                    
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
