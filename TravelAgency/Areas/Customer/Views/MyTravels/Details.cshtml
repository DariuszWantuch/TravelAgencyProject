@model TravelAgency.Models.Travel

@{
    ViewData["Title"] = "Details";
}

<center><h1>Szczegóły wycieczki :  <strong>@Html.DisplayFor(model => model.TravelPlace.PlaceName)</strong></h1><br /> <br /><br /><br /></center>

<div class="row">
    <div class="col-md">
        <p style="text-align: right">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="512" height="284" alt="..." />
        </p>
    </div>
    <div class="col-md">
        
            <dl class="row">
                <dt class="col-sm-10">
                   Data Od:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateFrom)
                </dd>
                <dt class="col-sm-10">
                    Data do:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateTo)
                </dd>
                <dt class="col-sm-10">
                    Cena:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-10">
                    Liczba miejsc:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PersonNumber)
                </dd>
                <dt class="col-sm-10">
                  Opis:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
              
               
            </dl>
    </div>


   
</div>

<br />
<center>
    <img data-controller="lazy-loading" data-src="https://cdn.shoplo.com/2325/articles/zadowoleni-klienci-opinie-recenzje-sklep.png?v=1527011361" alt="" class="img__img" src="https://cdn.shoplo.com/2325/articles/zadowoleni-klienci-opinie-recenzje-sklep.png?v=1527011361" data-loaded="true" data-lazy-loading-complete="true">
</center>
<div class="form-group row">
    <div class="form-group row col-5" style="margin:1% auto">
        <div class="col">
            <a asp-action="Index" class="btn btn-info form-control">Powrót</a>
        </div>
    </div>
</div>


